<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	   xmlns:dubbo="http://code.alibabatech.com/schema/dubbo" 
	   xsi:schemaLocation="
	   http://www.springframework.org/schema/beans 
	   http://www.springframework.org/schema/beans/spring-beans-2.5.xsd 
	   http://code.alibabatech.com/schema/dubbo 
	   http://code.alibabatech.com/schema/dubbo/dubbo.xsd
	   ">
	
<!-- 配置swaggerService-->
    <bean id="swaggerService" class="io.swagger.jaxrs.listing.DubboxAcceptHeaderApiListingResource" ></bean>
    <bean id="beanConfig" class="io.swagger.jaxrs.config.BeanConfig" init-method="init">
        <property name="schemes" value="http" ></property>
        <!--resourcePackage表示扫描的包地址！不能配置成org.example.*-->
        <property name="resourcePackage" value="org.example"></property>
        <property name="version" value="1.0"></property>
        <!--IP按实际填写，端口请与暴露的Rest端口一致-->
        <property name="host" value="localhost:8888"></property>
        <!--basePath请与Rest的ContextPath值一样-->
        <property name="basePath" value="/services"></property>
        <property name="title" value="这个是标题啊"></property>
        <property name="description" value="这里是描述呢"></property>
        <property name="contact" value="xieyichu@sf-express.com"></property>
        <property name="license" value="Apache 2.0"></property>
        <property name="licenseUrl" value="http://www.apache.org/licenses/LICENSE-2.0.html"></property>
    </bean>
    <dubbo:service interface="io.swagger.jaxrs.listing.DubboxSwaggerService" ref="swaggerService"></dubbo:service>
    
</beans>